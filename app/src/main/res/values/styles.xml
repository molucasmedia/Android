<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarFullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="Bghome" parent="TextAppearance.AppCompat.Display1">
        <item name="android:background">@drawable/shape_rectangle_rounded_10_grey</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Button">

        <item name="android:background">@drawable/shape_rectangle_button_primery</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorwhite</item>

    </style>

    <style name="Button.start">
        <item name="android:text">@string/masuk</item>
    </style>

    <style name="Button.login">
        <item name="android:text">@string/login</item>
    </style>

    <style name="Button.buatakun">
        <item name="android:text">@string/buat_akun</item>
    </style>
    
    <style name="textview" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="textview.Large">
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>


    <style name="Bgrelative" parent="TextAppearance.AppCompat.Display2">
        <item name="android:background">@drawable/shape_rectangle_rounded_10_white</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="textview.Homelist">
        <item name="android:textColor">@color/colorwhite</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:background">@drawable/shape_rectangle_button_primery</item>
    </style>
    <style name="textview.Homeuser">

        <item name="android:textColor">@color/colorblue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="textview.Homeusernama">
        <item name="android:layout_below">@id/textView5</item>
        <item name="android:layout_toRightOf">@id/textView4</item>
        <item name="android:textColor">@color/colorblack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/shape_rectangle_rounded_10_grey</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>
    
    <style name="EditText.Username">
        <item name="android:drawableStart">@drawable/ic_user</item>
        <item name="android:hint">Username</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Email">
        <item name="android:drawableStart">@drawable/ic_mail_black_24dp</item>
        <item name="android:hint">Email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EditText.Password">
        <item name="android:drawableStart">@drawable/ic_lock</item>
        <item name="android:hint">Password</item>
        <item name="android:inputType">textPassword</item>
    </style>
</resources>
